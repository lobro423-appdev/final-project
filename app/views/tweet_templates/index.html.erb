<h1>
  All tweets
</h1>

<a href="/tweets/new">
  Add a new tweet
</a>

<hr>

  <div class="container">
    <div class="row">
  <div class="col-md-12">

  </div>
</div>

<% @tweets.each do |tweet| %>
    <div class="row">
  <div class="col-md-8 offset-md-2">
  </div>
</div>


<div class="row mb-5">
  <div class="col-md-8 offset-md-2">
    <div class="card">
      <div class="card-header">
        <h4 class="card-title">
          <%= @users.find(tweet.user_id).username %>
        </h4>
      </div>

      <div class="card-body">
        <p>
        <b> Tweet: </b>
        <%= tweet.body %>
        <br>
        #<%= @categories.find(tweet.category_id).topic %>
          <a href= "<%= tweet.url%>"> LINK </a>
        </p>
        
        <p>
        <b> Key Takeaways: </b>
        <% if tweet.notes.blank? %>
          None
        <% else %>
        <%= tweet.notes %>
        <% end %> 
        </p>
        
        <p>
          <a href="/tweets/<%= tweet.id %>/edit">Edit Tweet</a>
        </p>
        

        <div>

        </div>
      </div> <!-- card-body -->
    </div> <!-- card  -->
  </div> <!-- col-md-8 offset-md-2 -->
</div> <!-- row -->

<% end %>

  </div>
